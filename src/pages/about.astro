---
import AboutLayout from "@layouts/AboutLayout.astro";
import LiveClockUpdate from "@sections/LiveClockUpdate/LiveClockUpdate";
import Dock from "@sections/Dock/Dock";
import Logo from "@common/Logo.astro";
import { Image } from "astro:assets";
import portrait from "@images/portrait.jpg";
import aboutContent from "@data/aboutContent.json";
---

<AboutLayout>
  <div class="live__clock">
    <LiveClockUpdate client:only="react" />
  </div>
  <div class="home__logo">
    <Logo />
  </div>
  <Dock client:only="react" />
  <div class="container">
    <div class="about__intro">
      <div class="about__portrait__image">
        <div class="about__portrait">
          <Image src={portrait} alt="Portrait of Will Gordon" loading={"eager"} />
        </div>
      </div>
      <div class="about__copy__wrapper">
        <div class="about__copy__title">
          <h1>Bio</h1>
        </div>

        <div class="about__copy">
          {
            aboutContent.about_copy.map((item, index) => (
              <>
                <p>{item.paragraph}</p>
                {index < aboutContent.about_copy.length - 1 && <br />}
              </>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</AboutLayout>
